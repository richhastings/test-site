//
// GRID
// ====
// Reference: https://github.com/clocklimited/responsive-grid
//


//
// BASE GRID STYLES
//

grid-base()
grid-reverse()

//
// GRID WIDTHS
//

grid-widths('', 2 3 4 5 6 7 8 12)

+width-min($mq--tablet)
  grid-widths('tablet', 2 3 4 5 7)

+width-min($mq--desktop)
  grid-widths('desktop', 1 2 3 4 6 7)
  
// 
// GRID MODIFIERS
//

grid-gutter-modifier("gutterless", 0);

.grid--reverse
	> .grid__item
		text-align center

.grid--middle
	> .grid__item
		vertical-align middle
